<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="atreal.contacts">
<body>
    <div metal:fill-slot="main"
         tal:define="plone_view nocall:context/@@plone;
                     useSelf python:plone_view.isStructuralFolder() and not plone_view.isFolderOrFolderDefaultPage();
                     folder_warning python:useSelf and here.portal_type != 'Topic';">

      <h1 class="documentFirstHeading"
          i18n:translate="">
        Csv file import
      </h1>
      
      <br/>

      <form method="POST" action="#"  enctype="multipart/form-data"
            tal:attributes="action plone_view/getCurrentUrl">
        
        <div>
            <label i18n:translate="">Csv file</label>
            <input type="file" name="csv_upload" />
        </div>
        
        <br/>
        
        <div>
            <label i18n:translate="">Existing entries:</label>
            <div>
              <input name="delete_existing" id="delete_existing_0"
                     type="radio" value="0" checked="checked" />
              <label for="delete_existing_0" i18n:translate="">Keep all contacts</label>
            </div>
              <div>
                <input name="delete_existing" id="delete_existing_2"
                       type="radio" value="2" />
              <label for="delete_existing_2" i18n:translate="">Remove matching existing contacts</label>
            </div>

            <div>
              <input name="delete_existing" id="delete_existing_1"
                     type="radio" value="1" />
              <label for="delete_existing_1" i18n:translate="">Remove all contacts</label>
            </div>
        </div>
        
        <br/>
       
        <div class="formControls">

          <input type="hidden"
                 name="form.submitted"
                 value="1"
                 />

          <input class="standalone"
                 type="submit"
                 value="Import"
                 name="form.button.Import"
                 i18n:attributes="value;"
                 />
          <input class="destructive"
                 type="submit"
                 value="Cancel"
                 name="form.button.Cancel"
                 i18n:attributes="value label_cancel;"
                 />
        </div>
        <input tal:replace="structure context/@@authenticator/authenticator" />
      </form>
    </div>
</body>
</html>

